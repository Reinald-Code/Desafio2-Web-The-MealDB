---
// src/layouts/Layout.astro
import Header from '../components/Header.astro'; // Lo crearemos después
import Footer from '../components/Footer.astro'; // Lo crearemos después

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <Header />
    <main class="container mx-auto p-4">
      <slot /> <!-- Aquí se insertará el contenido de cada página -->
    </main>
    <Footer />
  </body>
</html>