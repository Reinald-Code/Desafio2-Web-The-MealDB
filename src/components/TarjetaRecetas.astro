---
// src/components/TarjetaRecetas.astro
interface Props {
  id: string;
  title: string;
  imageUrl: string;
}
const { id, title, imageUrl } = Astro.props;
---

<a href={`/receta/${id}`} class="block border rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
  <img src={imageUrl} alt={`Imagen de ${title}`} class="w-full h-48 object-cover" />
  <div class="p-4">
    <h3 class="font-bold text-lg">{title}</h3>
  </div>
</a>