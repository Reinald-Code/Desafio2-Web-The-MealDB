---
import Layout from '../layouts/Layout.astro';

// Obtenemos todas las áreas/países disponibles
const response = await fetch('https://www.themealdb.com/api/json/v1/1/list.php?a=list');
const data = await response.json();
const areas = data.meals;

// Traducciones de países al español
const countryTranslations: { [key: string]: string } = {
  'American': 'Estadounidense',
  'British': 'Británica',
  'Canadian': 'Canadiense',
  'Chinese': 'China',
  'Croatian': 'Croacia',
  'Dutch': 'Holanda',
  'Egyptian': 'Egipto',
  'Filipino': 'Filipinas',
  'French': 'Francia',
  'Greek': 'Grecia',
  'Indian': 'India',
  'Irish': 'Irlanda',
  'Italian': 'Italia',
  'Jamaican': 'Jamaica',
  'Japanese': 'Japón',
  'Kenyan': 'Kenia',
  'Malaysian': 'Malasia',
  'Mexican': 'México',
  'Moroccan': 'Marruecos',
  'Polish': 'Polonia',
  'Portuguese': 'Portugal',
  'Russian': 'Rusia',
  'Spanish': 'España',
  'Thai': 'Tailandia',
  'Tunisian': 'Túnez',
  'Turkish': 'Turquía',
  'Ukrainian': 'Ucrania',
  'Uruguayan': 'Uruguay',
  'Vietnamese': 'Vietnam'
};
---

<Layout title="Cocinas del Mundo - Recetas por País">
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8 text-center text-gray-800">
      Cocinas del Mundo
    </h1>
    <p class="text-lg text-gray-600 text-center mb-12">
      Explora las deliciosas recetas tradicionales de diferentes países
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
      {areas.map((area: { strArea: string }) => (
        <a 
          href={`/country/${area.strArea.toLowerCase()}`}
          class="group bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden border border-gray-200"
        >
          <div class="p-6 text-center">
            <div class="text-4xl mb-3">
              {area.strArea === 'American' && '🇺🇸'}
              {area.strArea === 'British' && '🇬🇧'}
              {area.strArea === 'Canadian' && '🇨🇦'}
              {area.strArea === 'Chinese' && '🇨🇳'}
              {area.strArea === 'Croatian' && '🇭🇷'}
              {area.strArea === 'Dutch' && '🇳🇱'}
              {area.strArea === 'Egyptian' && '🇪🇬'}
              {area.strArea === 'Filipino' && '🇵🇭'}
              {area.strArea === 'French' && '🇫🇷'}
              {area.strArea === 'Greek' && '🇬🇷'}
              {area.strArea === 'Indian' && '🇮🇳'}
              {area.strArea === 'Irish' && '🇮🇪'}
              {area.strArea === 'Italian' && '🇮🇹'}
              {area.strArea === 'Jamaican' && '🇯🇲'}
              {area.strArea === 'Japanese' && '🇯🇵'}
              {area.strArea === 'Kenyan' && '🇰🇪'}
              {area.strArea === 'Malaysian' && '🇲🇾'}
              {area.strArea === 'Mexican' && '🇲🇽'}
              {area.strArea === 'Moroccan' && '🇲🇦'}
              {area.strArea === 'Polish' && '🇵🇱'}
              {area.strArea === 'Portuguese' && '🇵🇹'}
              {area.strArea === 'Russian' && '🇷🇺'}
              {area.strArea === 'Spanish' && '🇪🇸'}
              {area.strArea === 'Thai' && '🇹🇭'}
              {area.strArea === 'Tunisian' && '🇹🇳'}
              {area.strArea === 'Turkish' && '🇹🇷'}
              {area.strArea === 'Ukrainian' && '🇺🇦'}
              {area.strArea === 'Uruguayan' && '🇺🇾'}
              {area.strArea === 'Vietnamese' && '🇻🇳'}
              {!['American', 'British', 'Canadian', 'Chinese', 'Croatian', 'Dutch', 'Egyptian', 'Filipino', 'French', 'Greek', 'Indian', 'Irish', 'Italian', 'Jamaican', 'Japanese', 'Kenyan', 'Malaysian', 'Mexican', 'Moroccan', 'Polish', 'Portuguese', 'Russian', 'Spanish', 'Thai', 'Tunisian', 'Turkish', 'Ukrainian', 'Uruguayan', 'Vietnamese'].includes(area.strArea) && '🍽️'}
            </div>
            <h3 class="text-xl font-semibold text-gray-800 group-hover:text-blue-600 transition-colors">
              {countryTranslations[area.strArea] || area.strArea}
            </h3>
            <p class="text-sm text-gray-500 mt-2">
              Cocina {countryTranslations[area.strArea] || area.strArea}
            </p>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>
